{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@medbuddy/shared-types": [
                "../../packages/shared-types/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../../packages/shared-types/src/**/*"
    ]
}