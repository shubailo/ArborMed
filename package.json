{
    "name": "medbuddy-monorepo",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "db:generate": "turbo db:generate",
        "dev:backend": "npm run dev --workspace=@medbuddy/backend",
        "dev:flutter": "npm run dev --workspace=student_app"
    },
    "devDependencies": {
        "turbo": "^2.0.0",
        "prettier": "^3.0.0"
    },
    "packageManager": "npm@10.0.0",
    "workspaces": [
        "apps/*",
        "services/*",
        "packages/*",
        "tools/*"
    ]
}